{% import "_includes/forms" as forms %}

{% switch type %}
{% case "checkboxes" %}
        {{ forms.checkboxGroup({
                name: name,
                id: id,
                options: options,
                values: value
        }) }}
{% case "radios" %}
        {{ forms.radioGroup({
                name: name,
                id: id,
                options: options,
                values: value
        }) }}
{% default %}
        {{ forms.selectField({
                name: name,
                id: id,
                options: options,
                value: value
        }) }}
{% endswitch %}